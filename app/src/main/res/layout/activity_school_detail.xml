<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/schoolNameTV"
                style="@style/DetailViewStyle"
                android:textColor="@color/colorGrayDark"
                android:text="@string/name"
                android:textSize="@dimen/font_size20" />

            <TextView
                android:id="@+id/satAvgReadScore"
                style="@style/DetailViewStyle"
                android:text="@string/sat_avg_reading"
                android:visibility="visible" />

            <TextView
                android:id="@+id/satAvgMathScore"
                style="@style/DetailViewStyle"
                android:text="@string/sat_avg_math"
                android:visibility="visible" />

            <TextView
                android:id="@+id/satAvgWritingScore"
                style="@style/DetailViewStyle"
                android:text="@string/sat_avg_writing"
                android:visibility="visible" />

            <View
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin16"
                android:layout_marginRight="@dimen/margin16"
                style="@style/Divider" />

        </LinearLayout>

</FrameLayout>