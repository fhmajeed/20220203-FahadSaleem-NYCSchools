<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <ProgressBar
        android:id="@+id/loadingPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/error_message"
        android:textColor="@color/colorGrayDark"
        android:textSize="@dimen/font_size20"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/schoolNameTV"
            style="@style/DetailViewStyle"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/font_size20"
            tools:text="@string/name" />

        <TextView
            android:id="@+id/satAvgReadScore"
            style="@style/DetailViewStyle"
            android:visibility="visible"
            tools:text="@string/sat_avg_reading" />

        <TextView
            android:id="@+id/satAvgMathScore"
            style="@style/DetailViewStyle"
            android:visibility="visible"
            tools:text="@string/sat_avg_math" />

        <TextView
            android:id="@+id/satAvgWritingScore"
            style="@style/DetailViewStyle"
            android:visibility="visible"
            tools:text="@string/sat_avg_writing" />
    </LinearLayout>
</FrameLayout>